CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean: 
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

m.h:
	@echo "Header file m.h is missing." && exit 1
